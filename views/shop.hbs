<div class="row">
  <section class="main col-md-9">
    <item>
      <div class="row">
        <div class="col-4">
          <h2>{{data.post.title}}</h2>
          <img src="{{data.post.featureImage}}" alt="Feature Image">
           {{#safeHTML data.post.body}}
      <br /><br />
      {{/safeHTML}}
      <strong>Category:</strong> {{data.post.category}}
      <br />
      <strong>Price:</strong> {{data.post.price}}
      <br />
      <strong>Last Updated:</strong> {{data.post.postDate}}
        </div>
        <div class="col-8"><br />
          <br />
          <div class="row">
            <div class="col-12">
      {{#safeHTML data.post.body}}
      <br /><br />
      {{/safeHTML}}
      <strong>Category:</strong> {{data.post.category}}
      <br />
      <strong>Price:</strong> {{data.post.price}}
      <br />
      <strong>Last Updated:</strong> {{data.post.postDate}}
             
            </div>
          </div>
        </div>
      </div>
    </item>
  </section>
{{#if data.posts}}
  <div class="row">
    <div class="col-md-6">
      <h4>Items</h4>
      <ul>
        {{#each data.posts}}
          <li><a href="/shop/{{this.id}}?category={{../viewingCategory}}">{{this.title}}</a></li>
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
  
   {{#if data.categories}}
  <h4>Categories</h4>
  <ul>
    {{#each data.categories}}
      <li><a href="/shop?category={{this.id}}">{{this.name}}</a></li>
    {{/each}}
  </ul>
{{/if}}
{{#if data.post}}
  <!-- Display item details -->
{{else}}
  <div class="col-md-12 text-center">
    <h2>{{data.message}}</h2>
    <p>Please try another Post / Category</p>
  </div>
{{/if}}
